<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/themeColor">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="新增出库"
                android:textSize="22sp"
                android:id="@+id/tv_out_title"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_djrq"
                android:textSize="18sp"
                android:text="单据日期"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_value_djrq"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_djbh"
                android:textSize="18sp"
                android:text="单据编号"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="38dp"
                android:background="@drawable/et_bg"
                android:layout_marginRight="15dp"
                android:id="@+id/out_value_djbh"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_ck"
                android:textSize="18sp"
                android:text="仓库"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCkPicker"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:id="@+id/out_value_ck"
                android:background="#00ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_djlx"
                android:textSize="18sp"
                android:text="类型"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onDjlxPicker"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:id="@+id/out_value_djlx"
                android:background="#00ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_wldw"
                android:textSize="18sp"
                android:text="往来单位"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onWldwPicker"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:id="@+id/out_value_wldw"
                android:background="#00ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_jbr"
                android:textSize="18sp"
                android:text="经办人"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="38dp"
                android:background="@drawable/et_bg"
                android:layout_marginRight="15dp"
                android:id="@+id/out_value_jbr"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/add_goods_bg">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/out_key_bz"
                android:textSize="18sp"
                android:text="备注"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="38dp"
                android:background="@drawable/et_bg"
                android:layout_marginRight="15dp"
                android:id="@+id/out_value_bz"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!--<Button-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"-->
    <!--android:onClick="onAdd"-->
    <!--android:id="@+id/in_add"-->
    <!--android:text="添加物资"-->
    <!--android:textSize="20sp"-->
    <!--android:textColor="#ffffffff"-->
    <!--android:background="#555555"-->
    <!--android:layout_alignParentBottom="true"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99555555"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:onClick="onAdd">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:onClick="onAdd"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:id="@+id/out_add"
            android:text="添加物资"
            android:textSize="24sp"
            android:textColor="#ffffffff"
            android:background="#00555555"
            android:onClick="onAdd"/>

    </LinearLayout>

</RelativeLayout>