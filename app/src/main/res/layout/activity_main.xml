<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.whieenz.storagemanage.view.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/themeColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="我的"
            android:textSize="22sp"
            android:id="@+id/tv_main_title"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.whieenz.storagemanage.view.NoScrollViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main_viewPage">

    </com.whieenz.storagemanage.view.NoScrollViewPager>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_bg">

        <com.whieenz.storagemanage.view.ChangeColorInconWithText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:icon="@drawable/me"
            app:color="@color/themeColor"
            app:text="我"
            app:text_Size="12sp"
            android:padding="5dp"
            android:id="@+id/indicator_me"
            android:layout_weight="1"/>
        <com.whieenz.storagemanage.view.ChangeColorInconWithText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:icon="@drawable/storage"
            app:color="@color/themeColor"
            app:text="仓库"
            app:text_Size="12sp"
            android:padding="5dp"
            android:id="@+id/indicator_storage"
            android:layout_weight="1"/>
        <!--<com.whieenz.storagemanage.view.ChangeColorInconWithText-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--app:icon="@drawable/pic"-->
            <!--app:color="@color/themeColor"-->
            <!--app:text="分析"-->
            <!--app:text_Size="12sp"-->
            <!--android:padding="5dp"-->
            <!--android:id="@+id/indicator_pic"-->
            <!--android:layout_weight="1"/>-->
        <com.whieenz.storagemanage.view.ChangeColorInconWithText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:icon="@drawable/setting"
            app:color="@color/themeColor"
            app:text="设置"
            app:text_Size="12sp"
            android:padding="5dp"
            android:id="@+id/indicator_setting"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
